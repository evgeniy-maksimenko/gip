{deps, [
  {lager, "2.0.0", {git, "https://github.com/basho/lager.git", {tag, "2.0.0"}}},
  {egeoip, ".*", {git, "https://github.com/mochi/egeoip.git", {branch, "master"}}}
]}.

{sub_dirs, ["rel", "src"]}.
{lager, [
  {handlers, [
    {lager_console_backend, [info, {lager_default_formatter, [time," [",severity,"] ", message, "\n"]}]},
    {lager_file_backend, [{file, "error.log"}, {level, error}, {formatter, lager_default_formatter},
      {formatter_config, [date, " ", time," [",severity,"] ",pid, " ", message, "\n"]}]},
    {lager_file_backend, [{file, "console.log"}, {level, info}]}
  ]}
]}.

{cover_enabled, true}.
{erl_opts, [
  warn_export_all
]}.